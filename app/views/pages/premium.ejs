<body>

  <% if (user) { %>
    <%- include('../partials/header-login.ejs') %>
  <% } else { %>
    <%- include('../partials/header-default.ejs') %>
  <% } %>

    <main>
      <!-- Hero -->
      <div class="hero min-h-[calc(100vh-4rem)] bg-gradient-to-r from-primary to-secondary">
        <div class="hero-overlay opacity-25 bg-center bg-cover bg-fixed" style="background-image: url(/images/landing-bg.png);"></div>
        <div class="hero-content flex-col lg:flex-row-reverse">

